<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.FloatingButton" parent="AppTheme">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="font">@font/icomoon</item>
        <item name="textSize">24dp</item>
        <item name="textAlpha">0.64</item>
    </style>

    <style name="AppTheme.MediumText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:color">@color/light_gray</item>
    </style>

    <style name="AppTheme.LightText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:color">@color/dark_gray</item>
    </style>

    <style name="AppTheme.Tale" parent="AppTheme">
        <item name="srcCompat">@drawable/triangle</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:layout_height">@dimen/tale_size</item>
        <item name="android:layout_width">@dimen/tale_size</item>
    </style>

    <style name="AppTheme.MessageContainer" parent="AppTheme">
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="AppTheme.MessageInnerItem" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/double_tale_size</item>
        <item name="android:layout_marginLeft">@dimen/tale_size</item>
        <item name="android:layout_marginBottom">@dimen/tale_size</item>
        <item name="android:layout_marginTop">@dimen/tale_size</item>
        <item name="android:layout_margin">@dimen/tale_size</item>
    </style>

    <style name="AppTheme.FabTooltip" parent="AppTheme.LightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="layout_anchorGravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/fab_tooltip_margin</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
